{{#section 'css'}}
<title>Quản lí danh mục phụ</title>

{{!-- responsive --}}
<link href="/admin/css/responsive-info-add.css" rel="stylesheet" />
{{!-- responsive --}}
{{/section}}

<div id="content" class="mb-5">
    <header>
        <h5 class="page_title mb-0">Cập nhật danh mục phụ</h5>
    </header>
    <div class="content-inner">
        <div class="form-wrapper">
            <form method="POST" id="frmSubCategoryAdd">
                <div class="card mt-3 mb-3">

                    <div class="card-header">
                        <label class="mb-0"><b>Thông tin danh mục phụ</b></label>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label><b>Mã danh mục phụ</b></label>
                            <input readonly type="text" class="form-control" name="ID" value="{{this.subCategory.ID}}" />
                        </div>

                        <div class="form-group">
                            <label for="inputSubCategoryName"><b>Tên danh mục phụ</b></label>
                            <input type="text" class="form-control" id="inputSubCategoryName" name="NAME" value="{{this.subCategory.NAME}}" placeholder="Nhập tên danh mục phụ" />
                        </div>

                        <div class="form-group">
                            <label for="selectCategory" class="mr-1 mb-1"><b>Thuộc danh mục</b></label>
                            <select name="CATEGORYID" class="custom-select form-control mr-2" id="selectCategory">
                                {{#each this.categories}}
                                    {{#isSelected ID ../this.subCategory.CATEGORYID}}
                                    <option selected value="{{ID}}">{{NAME}}</option>
                                    {{else}}
                                    <option value="{{ID}}">{{NAME}}</option>
                                    {{/isSelected}}
                                {{/each}}
                            </select>
                            <input hidden type="text" class="form-control" name="OLDCATEGORYID" value="{{this.subCategory.CATEGORYID}}" />
                        </div>
                    </div>

                    <div class="d-flex justify-content-center mb-4">
                        <button type="submit" class="pl-5 pr-5 mr-5 btn btn-success">Cập nhật</button>
                        <a href="/admin/subCategory/subCategory-show" class="btn btn-primary pl-5 pr-5">Quay lại</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{{#section 'js'}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.js"></script>
<script src="/admin/chosen_v1.8.7/chosen.jquery.min.js"></script>
<script src="/admin/js/chosen-select.js"></script>

<script src="/admin/js/validate-UI-subCategory-add.js"></script>
{{/section}}