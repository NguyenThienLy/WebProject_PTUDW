<div id="content" class="mb-5">
    <header>
        <h5 class="page_title mb-0">Thêm sản phẩm mới</h5>
    </header>
    <div class="content-inner">
        <div class="form-wrapper">
            <!-- product-detail nav -->
            <nav>
                <div class="nav nav-tabs d-flex justify-content-center" id="nav-tab" role="tablist">
