<title>Thêm sản phẩm</title>

<!--Nội dung trang index-->
<div id="dashboard-con">
    <!--Card chứa form nhập thông tin của sản phẩm-->
    <form method="POST" enctype="multipart/form-data" id="add-product-form">
        <div class="card mt-3">

            <div class="card-header">
                <h5 class="mb-0">Hình ảnh sản phẩm (hình đầu tiên là ảnh đại diện)</h5>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <div>
                        <input id="product-image" name="PRODUCT_IMAGE" type="file" multiple>
                    </div>
                </div>
            </div>

        </div>
        <div class="card mt-3">
            <div class="card-header">
                <h5 class="mb-0">Thông tin sản phẩm</h5>
            </div>
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">

                        <label for="inputIDproduct" class="mt-2"><b>Mã sản phẩm</b></label>
                        <div>
                            <input name="ID" type="text" class="form-control" id="inputIDproduct" placeholder="SPT01"
                                readonly>
                        </div>

                        <label for="inputnameProduct" class="mt-2"><b>Tên sản phẩm</b></label>
                        <div>
                            <input name="NAME" type="text" class="form-control" id="inputnameProduct"
                                placeholder="nhập vào tên sản phâm">
                        </div>

                        <div class="row">
                            <div class="col-6">
                                <label for="selectProductSource" class="mt-2"><b>Nguồn gốc</b></label>
                                <div>
                                    <select name="ORIGIN" class="custom-select mr-2" id="selectProductSource">
                                        <option selected>Việt Nam</option>
                                        <option value="Mỹ">Mỹ</option>
                                        <option value="Trung Quốc">Trung Quốc</option>
                                        <option value="Nhật bản">Nhật bản</option>
                                        <option value="Úc">Úc</option>
                                        <option value="New Zealand">New Zealand</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-6">
                                <label for="selectProductBrand" class="mt-2"><b>Thương hiệu</b></label>
                                <div>
                                    <select name="BRANDID" class="custom-select mr-2" id="selectProductBrand">
                                        {{#each this.brands}}
                                        <option value="{{ID}}">{{NAME}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-6">
                                <label for="selectProductType" class="mt-2"><b>Danh mục</b></label>
                                <select name="CATEGORYID" class="custom-select mr-2" id="selectProductType">
                                    {{#each this.categories}}
                                    <option value="{{ID}}">{{NAME}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="col-6">
                                <label for="selectProductType" class="mt-2"><b>Loại sản phẩm</b></label>
                                <select name="SUBCATEGORYID" class="custom-select mr-2" id="SubCategory">
                                    {{#each this.subCategories}}
                                    <option value="{{ID}}">{{NAME}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>


                    </div>

                    <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
                        <label for="inputnameProduct" class="mt-2"><b>Trọng lượng sản
                                phẩm</b></label>
                        <div>
                            <input type="number" name="KILOGRAM" type="text" class="form-control" id="inputKLGProduct"
                                placeholder="nhập vào trọng lượng 1 sản phẩm">
                        </div>

                        <label for="inputnameProduct" class="mt-2"><b>Số lượng</b></label>
                        <div>
                            <input type="number" name="INVENTORY" type="text" class="form-control" id="inputINVENTORY"
                                placeholder="nhập vào số lượng sản phẩm">
                        </div>

                        <label for="inputPriceProduct" class="mt-2"><b>Giá sản phẩm</b></label>
                        <div>
                            <input type="number" name="PRICE" type="text" class="form-control" id="inputPriceProduct"
                                placeholder="Nhập vào giá sản phẩm">
                        </div>
                        <label for="inputPromotionProduct" class="mt-2"><b>Giảm giá</b></label>
                        <div>
                            <input type="number" name="SALE" type="text" class="form-control" id="inputPromotionProduct"
                                placeholder="0">
                        </div>

                    </div>

                </div>



                <!--End form nhập thông tin-->
            </div>
        </div>
        <!--End card chứa form nhập thông tin của sản phẩm-->

        <!--Card chứa form điền thông tin bài viêt-->
        <div class="card mt-3">

            <div class="card-header">
                <h5 class="mb-0">Mô tả sản phẩm</h5>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label class="sr-only">Tag</label>
                    <select name="TAG" class="chosen-select" data-placeholder="Chọn tag" multiple>
                        {{#each this.tags}}
                        <option value="{{ID}}">{{NAME}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="form-group">
                    <label class="sr-only">Nội dung</label>

                    <textarea id="my_editor" class="form-control" name="contain"></textarea>

                </div>


                <div class="pl-2 pb-2">
                    <div class="custom-control custom-control-inline custom-checkbox">
                        <input class="custom-control-input" type="checkbox" id="inlineCheckbox1" value="option1">
                        <label class="custom-control-label" for="inlineCheckbox1">Mới</label>
                    </div>
                    <div class="custom-control custom-control-inline custom-checkbox">
                        <input class="custom-control-input" type="checkbox" id="inlineCheckbox2" value="option2">
                        <label class="custom-control-label" for="inlineCheckbox2">Nổi bật</label>
                    </div>
                    <div class="custom-control custom-control-inline custom-checkbox">
                        <input class="custom-control-input" type="checkbox" id="inlineCheckbox3" value="option3">
                        <label class="custom-control-label" for="inlineCheckbox3">Hiển thị</label>
                    </div>
                </div>

                <div class="float-right">
                    <button id="btn-submit-form" type="submit" class="btn btn-success mr-2">Đăng</button>
                    <button type="button" class="btn btn-danger">Hủy</button>
                </div>
            </div>
        </div>
        <!--End Card chứa form điền thông tin bài viêt-->
    </form>
</div>
<!--End Nội dung trang index-->


