{{#section 'css'}}
<title>Danh sách thông tin</title>

{{!-- info show page --}}
<link href="/customer/css/component-info.css" rel="stylesheet" />
<link href="/customer/css/component-sort-header.css" rel="stylesheet" />
{{!-- info show page --}}

{{!-- responsive --}}
<link href="/customer/css/responsive-info-show.css" rel="stylesheet" />
{{!-- responsive --}}
{{/section}}

<form method="POST" name="frmInfoShow" action="/customer/info/info-show">

    <div class="breadcrumb-header container-fluid p-0">
        <div
            class="breadcrumb-div text-dark w-100 h-100 d-flex flex-column justify-content-center align-items-center pt-4 pb-4">
            <p>Tin tức</p>

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a href="/customer/index/">Trang chủ</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Tin tức
                    </li>
                </ol>
            </nav>
        </div>
    </div>
    <!-- Breadcrumb header -->

    <!-- info -->
    <div class="container mt-5">
        {{!-- Các loại sắp xếp của info --}}
        <div class="row d-flex justify-content-center component-sort-header">
            <div class="col-xl-3 col-lg-12 col-md-12 col-sm-12 col-12 d-flex justify-content-center align-items-center">
                <h3 class="text-success">Tất cả thông tin</h3>
            </div>

            <div
                class="col-xl-9 col-lg-12 col-md-12 col-sm-12 col-12 align-items-center d-flex justify-content-center content-right">
                <p class="m-0 sort-type">Sắp theo:</p>

                {{#each typeSorts}} <div class="form-check-inline ml-1">
                    <label class="form-check-label" for="radioSortProductShow">
                        <input type="radio" value="{{value}}" {{#if selected}}checked="" {{/if}}
                            class="form-check-input" name="radioSortInfoShow" />
                        {{name}}
                    </label>
                </div>
                {{/each}}

                <select name="selectSortInfoShow" class="form-control">
                    {{#each typeSorts}}
                    <option {{#if selected}}selected="" {{/if}} value="{{value}}">{{name}}
                    </option>
                    {{/each}}
                </select>
            </div>
        </div>
        {{!-- Các loại sắp xếp của info --}}

        <div class="row ml-0 mr-0 mt-5">
            {{!-- load news theo type sort --}}
            {{#each this.news}}
            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 col-12 d-flex justify-content-center">
                <div class="component-info-small card font-weight-bold border-0">
                    <div class="card-img-top h-50 w-100 position-relative" data-toggle="tooltip" title="{{TITLE}}">
                        <a class="stretched-link" href="/customer/info/info-detail/{{ID}}"></a>
                        <img src={{IMAGE}} id="info{{ID}}" class="w-100 h-100 rounded-top" alt="">
                        <div class="p-2 w-100 d-flex justify-content-center position-absolute info-info">
                            <div class="mr-3">
                                <i class="far fa-calendar"></i>
                                &nbsp
                                <span class="content">{{CREATED}}</span>
                            </div>

                            <div>
                                <i class="far fa-plus-square"></i>
                                &nbsp
                                <span class="content">Cool Team</span>
                                &nbsp
                            </div>

                            <div>
                                <i class="far fa-eye"></i>
                                &nbsp
                                <span class="content">{{VIEWS}}</span>
                            </div>
                        </div>
                    </div>

                    <div class="h-50 card-body text-center">
                        <a href="/customer/info/info-detail/{{ID}}" class="title card-title m-0">{{formatTitleInfo TITLE}}</a>
                        <p class="mt-2 font-weight-normal">
                            {{formatShortContentInfo SHORTCONTENT}}
                        </p>

                        <ul class="m-0 p-0">
                            {{#each tags}}
                            <a href="/customer/info/tag/{{ID}}" class="badge badge-dark">{{NAME}}</a>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
            {{/each}}
            {{!-- load news theo type sort --}}
        </div>

        <div class="row justify-content-center mt-5">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <!-- info -->

</form>

{{#section 'js'}}
<script src="/customer/js/breadcrumb-margin.js"></script>
<script src="/customer/js/frm-info-show-submit.js"></script>
<script src="/all/js/compress-image.js"></script>
{{/section}}