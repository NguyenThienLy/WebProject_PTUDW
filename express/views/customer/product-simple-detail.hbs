<!-- Breadcrumb header -->
<div class="breadcrumb-header container-fluid p-0">
    <div
        class="breadcrumb-div text-dark w-100 h-100 d-flex flex-column justify-content-center align-items-center pt-4 pb-4">
        <p>{{formatTitleInBreadCrumb productName}}</p>

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a href="/customer/index/">Trang chủ</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="/customer/product/product-show/{{productCategoryId}}/0">{{productCategoryName}}</a>
                </li>
                <li class="breadcrumb-item">
                    <a
                        href="/customer/product/product-show/{{productCategoryId}}/{{productSubCategoryId}}">{{productSubCategoryName}}</a>
                </li>
                
                <li class="breadcrumb-item active" aria-current="page">
                    {{formatTitleInBreadCrumb productName}}
                </li>
            </ol>
        </nav>
    </div>
</div>
<!-- Breadcrumb header -->

<!-- product detail intro -->
<div class="container mt-5">
    <div class="product-detail-intro row ml-0 mr-0">
        <div class="component-image-show p-0 col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6"
            id="divContainImageProductSimpleDetail">
            <div class="image-product-large mb-3">
                <img src="{{productImage}}" id="imgProductBig" alt="" class="d-block w-100 h-100">
            </div>

            <div id="divContainImageSmall" class="image-product-small-container d-flex">
                {{#each productSimpleImages}}
                <div class="image-product-small m-1">
                    <img class="w-100 h-100" src="{{LINK}}" />
                </div>
                {{/each}}
            </div>
        </div>

        <div id="divInfoAllProductDetail"
            class="product-detail-intro-right d-flex align-items-center pr-0 col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
            <div>
                <div>
                    <h1 id="h1ProductNameProductDetail">{{productName}}</h1>

                    <div>
                        <span>Thương hiệu: </span>
                        <span class="text-success"><strong>{{productBrandName}}</strong></span>
                        <span>&nbsp;|&nbsp;</span>
                        <span> Tình trạng: </span>
                        <span class="text-success"><strong>{{productInventory}}</strong></span>
                        <span> sp </span>
                    </div>

                    <div class="star-rate mt-2">
                        {{#each arrStarInRate}}
                        <i class="fa fa-star checked"></i>
                        {{/each}}

                        {{#each arrStarInRateUnCheck}}
                        <i class="fa fa-star"></i>
                        {{/each}}
                    </div>

                    <h1 id="h1ProductPriceProductDetail" class="d-inline text-success">{{formatPrice productSalePrice}}
                    </h1>
                    <h1 class="d-inline text-success"><u>đ</u></h1>

                    {{#if productSale}} &nbsp<p class="d-inline"><del>{{formatPrice productPrice}} đ</del></p> {{/if}}

                    <div class="mt-2">
                        <span>Nguồn gốc: </span>
                        <span class="text-success"><strong>{{productOrigin}}</strong></span>
                    </div>

                    <div class="mt-2">
                        <span>Khối lượng: </span>
                        <span class="text-success"><strong>{{productKilogram}} </strong></span> <span>/ 1 sp</span>
                    </div>
                </div>

                <hr />

                <div>
                    <ul>
                        <li><strong>Giới thiệu về sản phẩm này</strong>
                        </li>
                        {{#each arrShortDescription}}
                        <li>{{content}}</li>
                        {{/each}}
                    </ul>
                </div>

                <hr />

                <div class="add-to-cart">
                    <div class="d-flex align-items-center mb-3">
                        <span>Số lượng:&emsp;</span>
                        <div class="product-quantity d-flex align-items-center">
                            <button id="btnDecreaseQuantity" id-product-detail="productSimple{{productId}}"
                                id-product={{productId}} class="d-flex justify-content-center align-items-center mr-1">
                                -
                            </button>

                            <input type="number" id="inputQuantityProduct" class="mr-1 ml-1 text-center p-1"
                                value="1" />

                            <button id="btnIncreaseQuantity" id-product-detail="productSimple{{productId}}"
                                is-simple="{{isSimple}}" id-product={{productId}}
                                class="d-flex justify-content-center align-items-center mr-1">
                                +
                            </button>
                        </div>
                    </div>

                    <button id="btnAddToCartProductDetail" id-product-detail="productSimple{{productId}}"
                        is-simple="{{isSimple}}" id-product={{productId}} type="button"
                        class="btn btn-outline-success btn-lg">
                        Thêm vào giỏ hàng&ensp;<i class="fa fa-shopping-cart"></i>
                    </button>

                    <div class="mt-4">
                        <p class="d-inline">Gọi đặt mua:</p>
                        <a href="#" class="d-inline">0973-446-184</a>
                        <p class="d-inline">để nhanh chóng đặt hàng</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- product detail intro -->

<!-- Product detail -->
<div class="container component-product-detail mt-5">
    <!-- product-detail accordion -->
    <div class="accordion" id="product-detail-accordion">
        <!-- product-detail-heading1 -->
        <div class="card mb-3 border-0">
            <div id="product-detail-heading1">
                <div class="product-detail-accordion-header-1 p-2">
                    <button class="btn btn-link text-decoration-none p-0 text-success w-100" type="button"
                        data-toggle="collapse" data-target="#product-detail-collapse1" aria-expanded="true"
                        aria-controls="product-detail-collapse1">
                        <h3 class="mb-0">Mô tả sản phẩm</h3>
                    </button>
                </div>
            </div>

            <div id="product-detail-collapse1" class="collapse show pt-3" aria-labelledby="product-detail-heading1"
                data-parent="#product-detail-accordion">
                <div>
                    {{{productDescription}}}
                </div>
            </div>
        </div>
        <!-- product-detail-heading1 -->

        <!-- product-detail-heading2 -->
        <div class="card mb-3 border-0">
            <div id="product-detail-heading2">
                <div class="product-detail-accordion-header-2 p-2">
                    <button class="btn btn-link text-decoration-none p-0 text-success w-100" type="button"
                        data-toggle="collapse" data-target="#product-detail-collapse2" aria-expanded="true"
                        aria-controls="product-detail-collapse2">
                        <h3 class="mb-0">Khách hàng nhận xét</h3>
                    </button>
                </div>
            </div>

            <div id="product-detail-collapse2" class="collapse show pt-3" aria-labelledby="product-detail-heading2"
