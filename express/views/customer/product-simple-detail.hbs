                                <i class="fa fa-star checked"></i>
                                {{/each}}
                                {{#each arrStarInRateUnCheck}}
                                <i class="fa fa-star"></i>
                                {{/each}}
                            </div>
                            <p class="review m-0">(<span><strong
                                        id="strongQuantityCommentProductDetail">{{productCommentsQuantity}}</strong></span>
                                nhận
                                xét)</p>
                        </div>

                        <div id="divContainStarsPercentProductDetail"
